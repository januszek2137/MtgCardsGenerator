@{
    ViewData["Title"] = "Import Card Data";
}

<style>
    .import-container {
        max-width: 800px;
        margin: 0 auto;
    }

    .info-card {
        background: rgba(0, 0, 0, 0.4);
        border: 1px solid var(--border-subtle);
        border-radius: var(--radius-lg);
        padding: 2rem;
        margin-bottom: 2rem;
    }

    .info-card h5 {
        color: var(--gold-primary);
        font-weight: 700;
        font-size: 1.3rem;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .info-card p {
        color: var(--text-secondary);
        margin-bottom: 0.5rem;
    }

    .info-card p strong {
        color: var(--text-primary);
    }

    .import-btn {
        background: var(--gradient-gold);
        border: none;
        color: var(--bg-primary);
        font-weight: 700;
        font-size: 1.1rem;
        padding: 0.9rem 2.5rem;
        border-radius: var(--radius-full);
        cursor: pointer;
        transition: all var(--transition-base);
        box-shadow: var(--shadow-gold);
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .import-btn:hover:not(:disabled) {
        transform: translateY(-3px);
        box-shadow: var(--shadow-gold-lg);
    }

    .import-btn:disabled {
        opacity: 0.6;
        cursor: not-allowed;
        transform: none;
    }

    .status-message {
        margin-top: 2rem;
        padding: 1.5rem;
        border-radius: var(--radius-md);
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-size: 1rem;
    }

    .status-message.success {
        background: rgba(76, 175, 80, 0.15);
        border: 1px solid var(--success);
        color: var(--success);
    }

    .status-message.success a {
        color: var(--success);
        font-weight: 600;
        text-decoration: underline;
    }

    .status-message.info {
        background: rgba(33, 150, 243, 0.15);
        border: 1px solid var(--info);
        color: var(--info);
    }

    .spinner {
        display: inline-block;
        width: 20px;
        height: 20px;
        border: 3px solid rgba(33, 150, 243, 0.3);
        border-top-color: var(--info);
        border-radius: 50%;
        animation: spin 1s linear infinite;
    }

    .database-stats {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1.5rem;
        margin-top: 2rem;
    }

    .stat-box {
        background: rgba(212, 175, 55, 0.1);
        border: 1px solid var(--border-emphasis);
        border-radius: var(--radius-md);
        padding: 1.5rem;
        text-align: center;
    }

    .stat-box-icon {
        font-size: 2.5rem;
        color: var(--gold-primary);
        margin-bottom: 0.5rem;
    }

    .stat-box-value {
        font-size: 2rem;
        font-weight: 800;
        color: var(--gold-primary);
        margin-bottom: 0.25rem;
    }

    .stat-box-label {
        color: var(--text-secondary);
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 1px;
    }
</style>

<div class="import-container">
    <div class="hero-section" style="padding: 3rem 0 2rem;" data-aos="fade-up">
        <h1 class="hero-title" style="font-size: 2.5rem;">
            <i class="fas fa-database"></i>
            Import Card Data
        </h1>
        <p class="hero-subtitle">Import Magic: The Gathering card data from Scryfall</p>
    </div>

    @if (ViewBag.HasData)
    {
        <div class="alert alert-success" data-aos="fade-up" >
            <i class="fas fa-check-circle"></i>
            Database already contains <strong>@ViewBag.CardCount</strong> cards.
            <a href="/Cards" class="ms-2">
                <i class="fas fa-arrow-right"></i>
                Browse Cards
            </a>
        </div>

        <div class="database-stats" data-aos="fade-up" >
            <div class="stat-box">
                <div class="stat-box-icon">
                    <i class="fas fa-layer-group"></i>
                </div>
                <div class="stat-box-value">@ViewBag.CardCount</div>
                <div class="stat-box-label">Total Cards</div>
            </div>
            <div class="stat-box">
                <div class="stat-box-icon">
                    <i class="fas fa-database"></i>
                </div>
                <div class="stat-box-value">Ready</div>
                <div class="stat-box-label">Database Status</div>
            </div>
        </div>
    }
    else if (ViewBag.BulkInfo != null)
    {
        <div class="info-card" data-aos="fade-up" >
            <h5>
                <i class="fas fa-file-download"></i>
                Oracle Cards Bulk Data
            </h5>
            <p>
                <i class="fas fa-hdd"></i>
                <strong>Size:</strong> ~@(ViewBag.BulkInfo.Size / 1024 / 1024) MB
            </p>
            <p>
                <i class="fas fa-calendar-alt"></i>
                <strong>Last Updated:</strong> @ViewBag.BulkInfo.UpdatedAt.ToString("MMMM dd, yyyy")
            </p>
            <p class="text-muted-custom mt-3">
                <i class="fas fa-info-circle"></i>
                This will download and import all Magic: The Gathering cards from Scryfall's official database.
                The import process may take several minutes depending on your connection speed.
            </p>

            <button id="importBtn" class="import-btn mt-3">
                <i class="fas fa-cloud-download-alt"></i>
                Import Cards
            </button>
            <div id="status"></div>
        </div>
    }
    else
    {
        <div class="alert alert-warning" data-aos="fade-up" >
            <i class="fas fa-exclamation-triangle"></i>
            Unable to fetch bulk data information. Please try again later.
        </div>
    }
</div>

@section Scripts {
    <script>
        document.getElementById('importBtn')?.addEventListener('click', async function() {
            this.disabled = true;
            this.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Importing...';

            const statusDiv = document.getElementById('status');
            statusDiv.innerHTML = `
                <div class="status-message info">
                    <span class="spinner"></span>
                    <span>Importing cards from Scryfall... This may take a few minutes.</span>
                </div>
            `;

            try {
                const response = await fetch('/Data/Import', { method: 'POST' });

                if (response.ok) {
                    const data = await response.json();
                    statusDiv.innerHTML = `
                        <div class="status-message success">
                            <i class="fas fa-check-circle"></i>
                            <span>Successfully imported ${data.imported} cards! <a href="/Cards">Browse Cards</a></span>
                        </div>
                    `;
                } else {
                    throw new Error('Import failed');
                }
            } catch (error) {
                statusDiv.innerHTML = `
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-circle"></i>
                        Import failed. Please try again.
                    </div>
                `;
                this.disabled = false;
                this.innerHTML = '<i class="fas fa-cloud-download-alt"></i> Import Cards';
            }
        });
    </script>
}
