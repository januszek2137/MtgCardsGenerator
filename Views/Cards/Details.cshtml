@model AiMagicCardsGenerator.Models.Entities.Card

@{
    ViewData["Title"] = Model.Name;
}

@functions {
    public static string RenderManaCost(string? manaCost)
    {
        if (string.IsNullOrEmpty(manaCost)) return "-";
        
        var result = System.Text.RegularExpressions.Regex.Replace(
            manaCost,
            @"\{([^}]+)\}",
            match => $"<img src=\"/assets/symbols/{match.Groups[1].Value}.svg\" class=\"mana-symbol\" alt=\"{match.Groups[1].Value}\" />"
        );
        
        return result;
    }
    
    public static string RenderOracleText(string? oracleText)
    {
        if (string.IsNullOrEmpty(oracleText)) return "";
        
        var result = System.Text.RegularExpressions.Regex.Replace(
            oracleText,
            @"\{([^}]+)\}",
            match => $"<img src=\"/assets/symbols/{match.Groups[1].Value}.svg\" class=\"mana-symbol-small\" alt=\"{match.Groups[1].Value}\" />"
        );
        
        result = result.Replace("\n", "<br />");
        
        return result;
    }
    
    public static string GetRarityClass(string? rarity)
    {
        return rarity switch
        {
            "common" => "rarity-common",
            "uncommon" => "rarity-uncommon",
            "rare" => "rarity-rare",
            "mythic" => "rarity-mythic",
            _ => ""
        };
    }
}

<style>
    .back-btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        color: #D4AF37;
        text-decoration: none;
        font-weight: 500;
        margin-bottom: 2rem;
        transition: all 0.3s ease;
    }
    
    .back-btn:hover {
        color: #F4CF47;
        transform: translateX(-5px);
    }
    
    .card-detail-container {
        display: grid;
        grid-template-columns: 350px 1fr;
        gap: 3rem;
        max-width: 1000px;
        margin: 0 auto;
    }
    
    .card-image-section {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
    }
    
    .card-image-placeholder {
        width: 350px;
        height: 490px;
        background: linear-gradient(135deg, rgba(212, 175, 55, 0.1), rgba(0, 0, 0, 0.3));
        border: 2px solid rgba(212, 175, 55, 0.3);
        border-radius: 18px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #666;
        font-size: 1.2rem;
    }
    
    .card-info-section {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }
    
    .card-title {
        font-size: 2.5rem;
        font-weight: bold;
        background: linear-gradient(90deg, #D4AF37, #F4CF47, #D4AF37);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin: 0;
    }
    
    .card-mana-cost {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    
    .mana-symbol {
        width: 28px;
        height: 28px;
        vertical-align: middle;
    }
    
    .mana-symbol-small {
        width: 18px;
        height: 18px;
        vertical-align: middle;
        margin: 0 2px;
    }
    
    .card-type {
        color: #aaa;
        font-size: 1.2rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid rgba(212, 175, 55, 0.2);
    }
    
    .info-box {
        background: rgba(0, 0, 0, 0.4);
        border: 1px solid rgba(212, 175, 55, 0.2);
        border-radius: 12px;
        padding: 1.5rem;
    }
    
    .info-box-title {
        color: #D4AF37;
        font-weight: 600;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-bottom: 0.75rem;
    }
    
    .oracle-text {
        color: #ddd;
        font-size: 1.1rem;
        line-height: 1.7;
    }
    
    .flavor-text {
        color: #888;
        font-style: italic;
        font-size: 1rem;
        line-height: 1.6;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        padding-top: 1rem;
        margin-top: 1rem;
    }
    
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
        gap: 1rem;
    }
    
    .stat-item {
        background: rgba(0, 0, 0, 0.3);
        border: 1px solid rgba(212, 175, 55, 0.2);
        border-radius: 10px;
        padding: 1rem;
        text-align: center;
    }
    
    .stat-label {
        color: #888;
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 1px;
    }
    
    .stat-value {
        color: #D4AF37;
        font-size: 1.5rem;
        font-weight: bold;
        margin-top: 0.25rem;
    }
    
    .stat-value.rarity-common { color: #aaa; }
    .stat-value.rarity-uncommon { color: #C0C0C0; }
    .stat-value.rarity-rare { color: #D4AF37; }
    .stat-value.rarity-mythic { color: #F4631E; }
    
    .pt-display {
        font-size: 2rem;
        color: #D4AF37;
    }
    
    @@media (max-width: 768px) {
        .card-detail-container {
            grid-template-columns: 1fr;
            gap: 2rem;
        }
        
        .card-image-section {
            order: -1;
        }
        
        .card-image-placeholder {
            width: 280px;
            height: 390px;
        }
        
        .card-title {
            font-size: 1.8rem;
            text-align: center;
        }
        
        .stats-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }
</style>

<a href="/Cards" class="back-btn">← Back to Card Database</a>

<div class="card-detail-container">
    <div class="card-image-section">
        <div class="card-image-placeholder">
            🎴 Card Preview
        </div>
    </div>
    
    <div class="card-info-section">
        <div>
            <h1 class="card-title">@Model.Name</h1>
            <div class="card-mana-cost">
                @Html.Raw(RenderManaCost(Model.ManaCost))
            </div>
        </div>
        
        <div class="card-type">@Model.TypeLine</div>
        
        @if (!string.IsNullOrEmpty(Model.OracleText))
        {
            <div class="info-box">
                <div class="info-box-title">Card Text</div>
                <div class="oracle-text">
                    @Html.Raw(RenderOracleText(Model.OracleText))
                </div>
                
                @if (!string.IsNullOrEmpty(Model.FlavorText))
                {
                    <div class="flavor-text">
                        @Model.FlavorText
                    </div>
                }
            </div>
        }
        
        <div class="stats-grid">
            <div class="stat-item">
                <div class="stat-label">Mana Value</div>
                <div class="stat-value">@Model.Cmc</div>
            </div>
            
            @if (Model.Power != null)
            {
                <div class="stat-item">
                    <div class="stat-label">Power / Toughness</div>
                    <div class="stat-value pt-display">@Model.Power/@Model.Toughness</div>
                </div>
            }
            
            <div class="stat-item">
                <div class="stat-label">Rarity</div>
                <div class="stat-value @GetRarityClass(Model.Rarity)">@Model.Rarity</div>
            </div>
        </div>
    </div>
</div>