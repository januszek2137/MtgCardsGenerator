@{
    ViewData["Title"] = "Card Generator";
}

<div class="hero-section" data-aos="fade-up">
    <h1 class="hero-title" data-aos="fade-up" >
        <i class="fas fa-wand-magic-sparkles"></i>
        AI Card Generator
    </h1>
    <p class="hero-subtitle" data-aos="fade-up" >
        Create unique Magic: The Gathering cards powered by artificial intelligence
    </p>

    <form asp-action="Generate" method="post" id="generateForm" data-aos="fade-up">
        <div class="slider-wrapper">
            <label for="powerRange" class="form-label">
                <i class="fas fa-bolt"></i>
                Converted Mana Cost:
                <span id="rangeValue">5</span>
            </label>
            <input type="range"
                   class="form-range"
                   name="cardCmc"
                   id="powerRange"
                   min="0"
                   max="15"
                   value="5"
                   oninput="document.getElementById('rangeValue').innerText = this.value">
        </div>
        <button type="submit" class="cta-btn" id="generateBtn">
            <i class="fas fa-wand-magic-sparkles"></i>
            Generate Random Card
        </button>
    </form>

    <div class="progress-container" id="progressContainer">
        <div class="progress-bar-wrapper">
            <div class="progress-bar-fill" id="progressBar"></div>
            <div class="progress-percentage" id="progressPercentage">0%</div>
        </div>
        <div class="progress-status" id="progressStatus">
            <span class="spinner"></span>
            <span id="statusText">Initializing...</span>
        </div>
        <div class="progress-steps">
            <div class="progress-step" id="step1">
                <div class="step-icon-circle">
                    <i class="fas fa-dice"></i>
                </div>
                <span class="step-label">Finding cards</span>
            </div>
            <div class="progress-step-line"></div>
            <div class="progress-step" id="step2">
                <div class="step-icon-circle">
                    <i class="fas fa-robot"></i>
                </div>
                <span class="step-label">AI generation</span>
            </div>
            <div class="progress-step-line"></div>
            <div class="progress-step" id="step3">
                <div class="step-icon-circle">
                    <i class="fas fa-palette"></i>
                </div>
                <span class="step-label">Creating art</span>
            </div>
            <div class="progress-step-line"></div>
            <div class="progress-step" id="step4">
                <div class="step-icon-circle">
                    <i class="fas fa-image"></i>
                </div>
                <span class="step-label">Rendering</span>
            </div>
        </div>
    </div>
</div>

<div class="features">
    <div class="feature-card" data-aos="fade-up" >
        <div class="feature-icon">
            <i class="fas fa-robot"></i>
        </div>
        <div class="feature-title">AI-Powered</div>
        <div class="feature-desc">Cards generated using advanced language models trained on real MTG data</div>
    </div>
    <div class="feature-card" data-aos="fade-up" >
        <div class="feature-icon">
            <i class="fas fa-palette"></i>
        </div>
        <div class="feature-title">Unique Art</div>
        <div class="feature-desc">Each card features AI-generated artwork matching the card's theme</div>
    </div>
    <div class="feature-card" data-aos="fade-up" >
        <div class="feature-icon">
            <i class="fas fa-balance-scale"></i>
        </div>
        <div class="feature-title">Balanced Design</div>
        <div class="feature-desc">Cards are based on patterns from 30,000+ real MTG cards</div>
    </div>
</div>

@section Scripts {
    <script src="~/js/components/generator.js" asp-append-version="true"></script>
}